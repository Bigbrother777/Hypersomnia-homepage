{% include 'overall_header.twig' %}

<h2>{{ arena }}</h2>
<div class="arena">
  <div class="details">
    <dl>
      <dt>Short description</dt>
      <dd>{{ short_description }}</dd>
      <dt>Full description</dt>
      <dd>{{ full_description }}</dd>
      <dt>External resources</dt>
      <dd>{{ external_resources_num }}</dd>
      <dt>Author</dt>
      <dd>{{ author }}</dd>
      <dt>Updated</dt>
      <dd>{% if version_timestamp != 0 %}{{ version_timestamp }}{% else %}N/A{% endif %}</dd>
    </dl>
  </div>
  <div class="miniature"><img src="{{ url }}arenas/{{ arena }}/miniature.png"></div>
</div>
<div class="btn-group">
  <div class="button"><a href="{{ url }}arenas/{{ prev }}"><span><i class="fa-solid fa-arrow-left"></i></span><span>Previous</span></a></div>
  <div class="button"><a href="{{ url }}download/{{ arena }}"><span><i class="fa-solid fa-download"></i></span><span>Download</span></a></div>
  <div class="button"><a href="{{ url }}arenas/{{ next }}"><span><i class="fa-solid fa-arrow-right"></i></span><span>Next</span></a></div>
</div>

<script>
document.onkeydown = function(e) {
  switch(e.which) {
    case 37:
    if (4326 > 0) {
      window.location.href = "{{ url }}arenas/{{ prev }}";
    }
    break;
    case 39:
    if (4328 > 0) {
      window.location.href = "{{ url }}arenas/{{ next }}";
    }
    break;
    default: return;
  }
  e.preventDefault();
};
</script>

